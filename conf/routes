
# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# Routes API Rest

#Users
GET     /users/$id<[0-9]+>      controllers.data.UserController.get(id: Integer)
POST    /users                  controllers.data.UserController.create()
PUT     /users                  controllers.data.UserController.update()
DELETE  /users/$id<[0-9]+>      controllers.data.UserController.delete(id: Integer)

#Tables
GET     /tables/$id<[0-9]+>      controllers.data.TableController.get(id: Integer)
POST    /tables                  controllers.data.TableController.create()
PUT     /tables                  controllers.data.TableController.update()
DELETE  /tables/$id<[0-9]+>      controllers.data.TableController.delete(id: Integer)