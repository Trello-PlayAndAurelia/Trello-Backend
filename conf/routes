
# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# Routes API Rest

#Users
GET     /users                   controllers.data.UserController.listUsers()
GET     /users/:id               controllers.data.UserController.getUser(id: Int)
POST    /users                   controllers.data.UserController.createUser()
PUT     /users/:id               controllers.data.UserController.updateUser(id: Int)
DELETE  /users/:id               controllers.data.UserController.deleteUser(id: Int)

#Boards
GET     /boards/$id<[0-9]+>      controllers.data.BoardController.get(id: Integer)
POST    /boards                  controllers.data.BoardController.create()
PUT     /boards                  controllers.data.BoardController.update()
DELETE  /boards/$id<[0-9]+>      controllers.data.BoardController.delete(id: Integer)
